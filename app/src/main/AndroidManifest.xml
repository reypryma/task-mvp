    package="com.learnMVP.todolist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/DarkTheme">
        <activity android:name="com.learnMVP.todolist.module.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.learnMVP.todolist.module.list.ListActivity" />
        <activity android:name="com.learnMVP.todolist.module.create.AddTaskActivity" />
        <activity android:name="com.learnMVP.todolist.module.update.UpdateTaskActivity" />
    </application>

</manifest>